<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="#D8E4F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="10"
        android:background="@drawable/button_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/saisie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/resultat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="0"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="60"
        android:background="#D8E4F0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:paddingTop="0dp"
                android:paddingBottom="8dp"
                android:text="←"
                android:textStyle="bold"
                android:background="@drawable/button_border"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnCE"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="CE"
                android:layout_weight="1"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="C"
                android:textSize="30sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnPlusMin"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="+/-"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnRacine"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="√"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="7"
                android:textSize="30sp"
                tools:ignore="ButtonStyle"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="8"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="9"
                android:textSize="30sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="÷"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="%"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="4"
                android:textSize="30sp"
                tools:ignore="ButtonStyle"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="5"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="6"
                android:textSize="30sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="@string/multiplier"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn1SurX"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="@string/unSurX"
                android:textAllCaps="false"
                android:textSize="30sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="570dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/button_border"
                    android:paddingTop="0dp"
                    android:text="1"
                    android:textSize="30sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/button_border"
                    android:paddingTop="0dp"
                    android:text="2"
                    android:textSize="30sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/button_border"
                    android:paddingTop="0dp"
                    android:text="3"
                    android:textSize="30sp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/button_border"
                    android:paddingTop="0dp"
                    android:text="-"
                    android:textSize="30sp"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="570dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button_border"
                    android:paddingTop="0dp"
                    android:text="0"
                    android:textSize="30sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:paddingTop="0dp"
                    android:text=","
                    android:textSize="30sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:paddingTop="0dp"
                    android:text="@string/plus"
                    android:textSize="30sp"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

             </LinearLayout>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="132dp"
                android:layout_height="101dp"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:background="@drawable/button_border"
                android:paddingTop="0dp"
                android:text="="
                android:textSize="30sp"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
            </LinearLayout>


        </LinearLayout>

</LinearLayout>