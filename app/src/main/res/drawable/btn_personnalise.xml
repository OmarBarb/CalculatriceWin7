<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Quand le bouton est pressé -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerX="0.3"
                android:centerY="0.3"
                android:startColor="#C7E4EB"
                android:centerColor="#6faedd"
                android:endColor="#C7E4EB"
                android:gradientRadius="100"
                android:type="linear"/>
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
            <corners android:radius="5dp" />
            <!-- stroke : like the border in CSS. -->
            <stroke android:color="@color/colorPrimaryDark"
                android:width="5dp"
                android:dashWidth="8dp"/>
        </shape>
    </item>

    <!-- Quand le bouton n'est pas pressé -->
    <item android:state_pressed="false">

        <!-- la forme -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <gradient
                android:angle="-90"
                android:startColor="#B4CBE7"
                android:centerColor="#E7EDF5"
                android:endColor="#f5f5f5" />
            <corners android:radius="2dp" />

            <!-- background color = couleur de fond
            <solid android:color="#E7EDF5" /> -->

            <!-- border = frontière-->
            <stroke
                android:width="2dp"
                android:color="#000" />

            <!-- corner roundness  = rondeur de coin -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>