<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#D8E4F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="40"
        android:background="@drawable/button_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/saisie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="30dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/resultat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold"
            android:paddingEnd="5dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textColor="#fff"
        android:background="#fff"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="60"
        android:background="#D8E4F0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:paddingTop="0dp"
                android:paddingBottom="8dp"
                android:text="←"
                android:gravity="center"
                android:background="@drawable/btn_personnalise"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnCE"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="CE"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="C"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnPlusMin"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="±"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnRacine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="√"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="7"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="8"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="9"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="÷"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="%"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="4"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="5"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="6"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="@string/multiplier"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn1SurX"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="@string/unSurX"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_personnalise"
                        android:paddingTop="0dp"
                        android:text="1"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_personnalise"
                        android:paddingTop="0dp"
                        android:text="2"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_personnalise"
                        android:paddingTop="0dp"
                        android:text="3"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="69dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_personnalise"
                        android:paddingTop="0dp"
                        android:text="-"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="144dp"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_personnalise"
                        android:paddingTop="0dp"
                        android:text="0"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btnDot"
                        android:layout_width="68dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_personnalise"
                        android:paddingTop="0dp"
                        android:text=","
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="68dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_personnalise"
                        android:paddingTop="0dp"
                        android:text="@string/plus"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="68dp"
                android:layout_height="147dp"
                android:layout_gravity="right"
                android:background="@drawable/btn_personnalise"
                android:paddingTop="0dp"
                android:text="="
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>